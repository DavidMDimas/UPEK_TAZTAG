<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.pethoalpar.zxingexample.MainActivity">

    <Button
        android:id="@+id/btnQR"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="15dp"
        android:text="@string/escaneo_de_qr" />

    <Button
        android:id="@+id/btnFacial"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/btnQR"
        android:layout_toEndOf="@+id/btnQR"
        android:layout_toRightOf="@+id/btnQR"
        android:text="@string/captura_facial" />

    <Button
        android:id="@+id/btnFirma"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/btnFacial"
        android:layout_toEndOf="@+id/btnFacial"
        android:layout_toRightOf="@+id/btnFacial"
        android:text="@string/captura_de_firma" />

    <Button
        android:id="@+id/btnDactilar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/btnFirma"
        android:layout_toEndOf="@+id/btnFirma"
        android:layout_toRightOf="@+id/btnFirma"
        android:text="@string/captura_dactilar" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginTop="15dp"
        android:layout_marginRight="15dp"
        android:layout_alignParentRight="true"
        android:src="@drawable/usuario_login" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/view"
        android:layout_toLeftOf="@+id/imageView2"
        android:layout_toStartOf="@+id/imageView2"
        android:layout_marginRight="15dp"
        android:text="@string/admin"
        android:textSize="24sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_alignBaseline="@+id/btnNextFacial"
        android:layout_alignBottom="@+id/btnNextFacial"
        android:layout_alignParentStart="true"
        android:text="Escanear cÃ³digo"
        tools:ignore="HardcodedText" />

    <TextView
        android:id="@+id/scan_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:layout_marginLeft="50dp"
        android:textSize="25dp"
        android:visibility="invisible"/>
    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:layout_marginLeft="50dp"
        android:textSize="25sp"
        android:text="" />

    <View
        android:id="@+id/view"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginTop="60dp"
        android:background="@android:color/black" />

    <LinearLayout
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:gravity="right"
        android:layout_marginLeft="650dp"
        android:layout_marginTop="90dp"
        android:id="@+id/linearLayout">

        <ImageView
            android:id="@+id/image"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignLeft="@+id/linearLayout"
            android:layout_alignParentTop="true"
            android:layout_alignStart="@+id/linearLayout" />
    </LinearLayout>

    <Button
        android:id="@+id/btnNextFacial"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/imageView2"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="15dp"
        android:layout_alignRight="@+id/imageView2"
        android:text="Siguiente"
        android:visibility="visible"/>

</RelativeLayout>
