<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
tools:context="com.example.pethoalpar.zxingexample.MainActivity">

<Button
    android:id="@+id/btnQRFacial"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_alignParentLeft="true"
    android:layout_alignParentStart="true"
    android:layout_marginTop="10dp"
    android:text="Escaneo de QR" />

<Button
    android:id="@+id/btnFacialFacial"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_alignBottom="@+id/btnQRFacial"
    android:layout_toEndOf="@+id/btnQRFacial"
    android:layout_toRightOf="@+id/btnQRFacial"
    android:text="Captura facial" />

<Button
    android:id="@+id/btnFirmaFacial"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_alignTop="@+id/btnFacialFacial"
    android:layout_toEndOf="@+id/btnFacialFacial"
    android:layout_toRightOf="@+id/btnFacialFacial"
    android:text="CAPTURA DE FIRMA" />

<Button
    android:id="@+id/btnDactilarFacial"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_alignTop="@+id/btnFirmaFacial"
    android:layout_toEndOf="@+id/btnFirmaFacial"
    android:layout_toRightOf="@+id/btnFirmaFacial"
    android:text="CAPTURA DACTILAR" />

<ImageView
    android:id="@+id/imageView2"
    android:layout_width="50dp"
    android:layout_height="50dp"
    android:layout_marginTop="5dp"
    android:layout_marginRight="15dp"
    android:layout_alignParentRight="true"
    android:src="@drawable/usuario_login" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/imageView2"
        android:layout_toLeftOf="@+id/imageView2"
        android:layout_toStartOf="@+id/imageView2"
        android:text="Admin"
        android:textSize="24sp"
        android:textStyle="bold" />

<View
    android:id="@+id/view"
    android:layout_width="wrap_content"
    android:layout_height="0dp"
    android:layout_marginTop="60dp"
    android:background="@android:color/black" />


    <SurfaceView
        android:id="@+id/cameraView"
        android:layout_width="500dp"
        android:layout_height="400dp"
        android:layout_centerVertical="true"
        android:layout_marginLeft="25dp"/>

    <SurfaceView
        android:id="@+id/TransparentView"
        android:layout_width="300dp"
        android:layout_height="390dp"
        android:layout_marginTop="69dp"
        android:layout_marginLeft="125dp"/>

<Button
    android:id="@+id/btnNextFirma"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_alignEnd="@+id/imageView2"
    android:layout_alignParentBottom="true"
    android:layout_marginBottom="15dp"
    android:layout_alignRight="@+id/imageView2"
    android:text="Siguiente"
    android:visibility="visible"/>

    <Button
        android:id="@+id/btncamara"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/cameraView"
        android:layout_alignStart="@+id/cameraView"
        android:layout_marginTop="470dp"
        android:text="Tomar fotografÃ­a" />


</RelativeLayout>