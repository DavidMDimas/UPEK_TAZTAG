<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/ImageManoIzquierda"
        android:layout_width="400dp"
        android:layout_height="400dp"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:layout_marginStart="104dp"
        android:src="@drawable/hand_left" />

    <ImageView
        android:id="@+id/ImageManoDErecha"
        android:layout_width="400dp"
        android:layout_height="400dp"
        android:layout_alignTop="@+id/ImageManoIzquierda"
        android:layout_marginStart="36dp"
        android:layout_toEndOf="@+id/ImageManoIzquierda"
        android:src="@drawable/hand_right" />

    <TextView
        android:id="@+id/EnrollmentTextView"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:gravity="center_vertical"/>


</RelativeLayout>